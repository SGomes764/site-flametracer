<section id="contact" class="section contact-section">
  <div class="container">
    <div class="contact-content">
      <h2>
        <span class="text-gradient">Entre em Contacto</span>
        <span class="subtitle">Adoraríamos ouvir as suas ideias</span>
      </h2>

      <form class="contact-form fade-in" data-delay="300" action="mailto:82@aebatalha.ccems.pt" method="get" enctype="text/plain">
